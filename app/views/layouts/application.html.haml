!!!
%html
	%head
		%title= yield(:title)
		= javascript_include_tag "application", "jquery.tagsinput.min", "jquery.typing-0.2.0.min"
		= stylesheet_link_tag "application", media: "all"
		= csrf_meta_tags
	%body
		.bg-wrapper
			= image_tag('core/background.jpg', :class => 'bg-img', :style => "width: 100%")
		.wrapper
			.main-content

				.modal#feedback-board
					.spinner
					#feedback-new

				.main_page_div
					= yield
		.footer
			= render 'layouts/footer'


