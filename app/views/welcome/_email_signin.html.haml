= form_tag user_checkin_path, remote: true do
	= email_field_tag 'user[email]', nil, placeholder: "eMail"
	= password_field_tag 'user[password]', nil, placeholder: "password"
	.left.form-options
		= check_box_tag 'user[remember_me]'
		= label_tag 'user[remember_me]', 'Remember Me'
		.forgot-link.right= link_to "Forgot your password?", new_password_path(:user)
	.clear
	.right
		%input{type: 'submit', value: 'submit'}
	.clear
		
:javascript
	$("input, textarea").placeholder();