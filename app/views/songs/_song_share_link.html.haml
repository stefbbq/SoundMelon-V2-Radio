- @song = Song.find(locals[:id])

.artist-share-song-box
	%span share this song
	.share-link.share-icon.sprite.black
		%a.filled-link.share-song{'data-song-path' => ENV["HOST_ADDR"] + song_path(@song), 'data-song-title' => @song.song_title}

	.hidden.share-link-content
		.social-sharing
			%span share to
			.icon-wrapper
				- @image = @song.artist.artist_photo.url
				.social-icon.facebook-icon{'data-share-link' => "", 'data-share-title' => '', 'data-share-caption' => '', 'data-share-artist' => @song.artist.artist_name, 'data-share-image' => @image}
			.icon-wrapper
				.social-icon.twitter-icon
					%a.filled-link{href: ''}
		.clipboard-btn#clipboard-btn{'data-clipboard-text' => ''}
			COPY THIS LINK
			.clipboard-icon


:javascript
	$(".song-form .share-song").click(function() {
		RadioManager.shareSong($(".song-form .share-link-content").clone().removeClass('hidden'), this);
	});