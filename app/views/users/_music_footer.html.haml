- if !current_user.is_artist?
	.link-box.menu-hover.menu-artist
		.link-icon.add-music-icon
		%span.label Add Tunes
		= link_to("" , add_media_account_path, remote: true, "data-modal" => 'music-add', class: 'hover-link modal-link filled-link', id: 'add-account')
	/%span.menu-artist Artist? Add your #{}

- else
	.link-box.menu-hover.menu-artist
		.link-icon.artist-profile-icon
		%span.label Artist Profile
		= link_to("", artist_profile_edit_path, remote: true, "data-modal" => 'artist-profile', class: 'hover-link modal-link filled-link', id: 'artist-profile-edit')

	.link-box.menu-hover.menu-artist
		.link-icon.edit-music-icon
		%span.label Edit Tunes
		= link_to("" , artist_show_path, remote: true, "data-modal" => 'music-admin', class: 'hover-link add-content modal-link filled-link', id: 'artist-show')
		/%span.menu-artist Manage #{} or your #{}