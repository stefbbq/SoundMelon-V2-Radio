= stylesheet_link_tag "signup_js"
- provide(:title, 'Registration')

.row
	= form_for @user, :validate => true do |f|
		= render 'shared/error_messages'
		
		=f.label :first_name, "First Name"
		=f.text_field :first_name, :placeholder => 'First Name'		

		=f.label :last_name, "Last Name"
		=f.text_field :last_name, :placeholder => 'Last Name'		

		Pick a
		=f.label :username, "Username"
		=f.text_field :username, :placeholder => 'User Name'		

		=f.label :email, "Email"
		=f.text_field :email, :placeholder => 'Email', id: "email_input"
		
		=f.label :email_confirmation, "Confirm Email"
		=f.text_field :email_confirmation, :placeholder => 'Confirm Email', id: "conf_email_input"
		%p#conf_email_validation
		
		=f.label :password, "Password"
		=f.password_field :password, :placeholder => 'Password'		

		=f.label :password_confirmation, "Confirm Password"
		=f.password_field :password_confirmation, :placeholder => 'Confirm Password'
		
		=f.submit "Submit"
