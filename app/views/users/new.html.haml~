= javascript_include_tag "signup_js"
= stylesheet_link_tag "signup_style"
- provide(:title, 'Registration')

.row
	= form_for(User.new, remote: true, :validate => true) do |f|
		= render 'shared/error_messages'

		=f.label :first_name, "First Name", class: "hidden"
		=f.text_field :first_name, :placeholder => 'First Name'		

		=f.label :last_name, "Last Name", class: "hidden"
		=f.text_field :last_name, :placeholder => 'Last Name'		

		Pick a
		=f.label :username, "Username", class: "hidden"
		=f.text_field :username, :placeholder => 'User Name'		

		=f.label :email, "Email", class: "hidden"
		=f.text_field :email, :placeholder => 'Email', id: "email_input"

		=f.label :email_confirmation, "Confirm Email", class: "hidden"
		=f.text_field :email_confirmation, :placeholder => 'Confirm Email', id: "conf_email_input"

		=f.label :password, "Password", class: "hidden"
		=f.password_field :password, :placeholder => 'Password'		

		=f.label :password_confirmation, "Confirm Password", class: "hidden"
		=f.password_field :password_confirmation, :placeholder => 'Confirm Password'

		=f.submit "Submit"
